{
  "name": "table-tennis-queue-management",
  "version": "1.0.0",
  "description": "Full-stack React application for managing table tennis queues",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "install-all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "lint": "eslint ."
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.7",
    "jest": "^27.0.6",
    "supertest": "^6.1.3",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.24.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "mongoose": "^5.13.2",
    "cors": "^2.8.5",
    "socket.io": "^4.1.3"
  }
}
